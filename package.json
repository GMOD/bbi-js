{
  "name": "@gmod/bbi",
  "version": "7.1.0",
  "description": "Parser for BigWig/BigBed files",
  "license": "MIT",
  "repository": "GMOD/bbi-js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./esm/index.js",
    "require": "./dist/index.js"
  },
  "author": {
    "name": "Colin Diesh",
    "email": "colin.diesh@gmail.com",
    "url": "https://github.com/cmdcolin"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist",
    "esm",
    "src"
  ],
  "scripts": {
    "test": "vitest",
    "benchonly": "vitest bench",
    "bench": "./scripts/build-both-branches.sh \"$BRANCH1\" \"$BRANCH2\" && vitest bench",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "clean": "rimraf dist esm",
    "prebuild": "yarn clean",
    "build:esm": "tsc --outDir esm",
    "build:es5": "tsc --module commonjs --outDir dist",
    "postbuild:es5": "echo '{\"type\": \"commonjs\"}' > dist/package.json",
    "build": "yarn build:esm && yarn build:es5",
    "preversion": "yarn lint && yarn test --run && yarn build",
    "version": "standard-changelog && git add CHANGELOG.md",
    "postversion": "git push origin master --follow-tags"
  },
  "keywords": [
    "bionode",
    "biojs",
    "bigwig",
    "bigbed",
    "ucsc",
    "genomics"
  ],
  "dependencies": {
    "generic-filehandle2": "^2.0.10",
    "pako-esm2": "^1.0.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@gmod/bed": "^2.1.2",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "@vitest/coverage-v8": "^4.0.6",
    "eslint": "^9.9.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "standard-changelog": "^7.0.1",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.4.0",
    "vitest": "^4.0.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
