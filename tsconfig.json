{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2022",
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
